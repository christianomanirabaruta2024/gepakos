							<div class="flex space-x-1">
								<!-- Bouton "Précédent" -->
								<a href="{{ pagination.page > 1 ? path('app_paroissien_index', { page: pagination.page - 1 }) : '#' }}"
								class="flex justify-between items-center px-3 py-1 min-w-9 min-h-9 text-sm font-normal {{ pagination.page > 1 ? 'text-slate-500 bg-white border border-slate-200 hover:bg-slate-50 hover:border-slate-400' : 'text-gray-300 bg-gray-100 border-gray-200 cursor-not-allowed' }} rounded transition duration-200 ease">
									Precendent
								</a>

								<!-- Boutons pour chaque page -->
								{% for i in 1..pagination.pages %}
									<a href="{{ path('app_paroissien_index', { page: i }) }}"
									class="px-3 flex justify-between items-center  py-1 min-w-9 min-h-9 text-sm font-normal {{ i == pagination.page ? 'text-white bg-slate-800 border-slate-800 hover:bg-slate-600 hover:border-slate-600' : 'text-slate-500 bg-white border border-slate-200 hover:bg-slate-50 hover:border-slate-400' }} rounded transition duration-200 ease">
										{{ i }}
									</a>
								{% endfor %}

