								<a href="{{ pagination.page < pagination.pages ? path('app_paroissien_index', { page: pagination.page + 1 }) : '#' }}"
								class=" flex justify-between items-center px-3 py-1 min-w-9 min-h-9 text-sm font-normal {{ pagination.page < pagination.pages ? 'text-slate-500 bg-white border border-slate-200 hover:bg-slate-50 hover:border-slate-400' : 'text-gray-300 bg-gray-100 border-gray-200 cursor-not-allowed' }} rounded transition duration-200 ease">
									Suivant
